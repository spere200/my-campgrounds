<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add New Campground</a>
</div>
<ul>
  <% for(let campground of campgrounds){ %>
  <li>
    <a href="/campgrounds/<%= campground._id %>">
      <%= campground.title %>, <%= campground.location %>
    </a>
  </li>
  <% } %>
</ul>
