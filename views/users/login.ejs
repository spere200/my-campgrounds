<% layout('layouts/boilerplate') %>
<form action="/login" method="POST" novalidate class="validated-form">
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="text"
      id="password"
      name="password"
      required
    />
  </div>
  <div class="mb-3">
    <button class="btn btn-success">Login</button>
  </div>
</form>
